<p id="notice"><%= notice %></p>

<h1>Proveedores por categorías</h1>

<table border="1">
  <thead>
    <tr>
      <th>Proveedor</th>
      <th>Categorium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria_proveedors.each do |categoria_proveedor| %>
      <tr>
        <td><%= categoria_proveedor.proveedor.nombre %></td>
        <td><%= categoria_proveedor.categorium.nombre %></td>
        <!--<td><%= link_to 'Mostrar', categoria_proveedor %></td>-->
        <!--<td> <%= link_to 'Editar', edit_categoria_proveedor_path(categoria_proveedor) %> </td>-->
        <td><%= link_to 'Eliminar', categoria_proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.rol == ADMIN %>
    <button type="button"><%= link_to 'Nuevo proveedor de categoría', new_categoria_proveedor_path %></button>

<% end %>
