<p id="notice"><%= notice %></p>

<h1>Proveedores de items</h1>

<table border="1">
  <thead>
    <tr>
      <th>Item</th>
      <th>Proveedor</th>
      <th>Precio</th>
      <% if current_user.rol == ADMIN || current_user.rol == OPERARIO %><th>Celular proveedor</th> <% end %>
      <% if current_user.rol == ADMIN %> <th colspan="3"></th> <% end %>
    </tr>
  </thead>

  <tbody>
    <% @item_proveedors.each do |item_proveedor| %>
      <tr>
        <td><%= item_proveedor.item.nombre %></td>
        <td><%= item_proveedor.proveedor.nombre %></td>
        <td><%= item_proveedor.precio %></td>
        <% if current_user.rol == ADMIN || current_user.rol == OPERARIO %><td><% item_proveedor.proveedor.user.celular%></td><% end %>
        <% if current_user.rol == ADMIN %> <td><!-- <%= link_to 'Ver', item_proveedor %> --></td>

        <td><%= link_to 'Editar', edit_item_proveedor_path(item_proveedor) %></td>
        <td><%= link_to 'Eliminar', item_proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.rol == ADMIN %>

<button type="button"><%= link_to 'Nuevo Proveedor de Item', new_item_proveedor_path %></button>

<% end %>
