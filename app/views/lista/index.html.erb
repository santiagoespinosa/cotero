<p id="notice"><%= notice %></p>

<h1>Listas</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Restaurante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lista.each do |listum| %>
      <tr>
        <td><%= listum.nombre %></td>
        <td><%= listum.restaurante.nombre %></td>
        <td><%= link_to 'Ver', listum %></td>
        <td><%= link_to 'Editar', edit_listum_path(listum) %></td>
        <td><%= link_to 'Eliminar', listum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.rol == ADMIN || current_user.rol == RESTAURANTE%>
<br>
<button type="button"><%= link_to 'Nueva Lista', new_listum_path %>
</button>
<% end %>
